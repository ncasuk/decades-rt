# vim: syntax=apache ft=apache tabstop=8 expandtab shiftwidth=3 softtabstop=3
<VirtualHost *:80>
   ServerAdmin webmaster@localhost
   ServerName septic
   ServerAlias fish
   ServerAlias header
   ServerAlias drunk
   ServerAlias drunktank
   ServerAlias decades-dev
   ServerAlias decades-test
   ServerAlias 192.168.101.108
   ServerAlias 192.168.101.110
   ServerAlias 192.168.101.111
   ServerAlias 192.168.101.133
   ServerAlias 127.0.0.1

   DocumentRoot /var/www/decades/

   <Directory />
      Options FollowSymLinks
      AllowOverride None
   </Directory>
   <Directory /var/www/decades/>
      Options Indexes FollowSymLinks MultiViews ExecCGI
      #CheckSpelling On
      AddHandler cgi-script .cgi
      AddHandler wsgi-script .wsgi

      AllowOverride All
      Order allow,deny
      allow from all
   </Directory>

   Redirect /index.html /live/index
   WSGIApplicationGroup %{GLOBAL}
   WSGIScriptAlias /live/ /var/www/decades-live/live.wsgi/
   WSGIScriptAlias /plot/Parano.txt /var/www/decades-live/live.wsgi/parano.txt
   #WSGIScriptAlias /plot/FLTSUMM /var/www/decades-live/flightmanager.wsgi
   SetEnv JinjaTemplates /var/www/decades-live/templates
   <Directory "/var/www/decades-live/">
      AllowOverride None
      Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
      Order allow,deny
      Allow from all
   </Directory>

   ErrorLog /var/log/apache2/error.log

   # Possible values include: debug, info, notice, warn, error, crit,
   # alert, emerg.
   LogLevel info

   CustomLog /var/log/apache2/access.log combined

   Alias /doc/ "/usr/share/doc/"
   <Directory "/usr/share/doc/">
      Options Indexes MultiViews FollowSymLinks
      AllowOverride None
      Order deny,allow
      Deny from all
      Allow from 127.0.0.0/255.0.0.0 ::1/128
   </Directory>

</VirtualHost>
